{
  "name": "Fullstack Dev Env",
  "dockerFile": "Dockerfile",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csharp",
        "ms-dotnettools.csdevkit",
        "angular.ng-template",
        "dbaeumer.vscode-eslint",
        "ms-azuretools.vscode-docker",
        "ms-mssql.mssql",
        "eamodio.gitlens",
        "esbenp.prettier-vscode",
        "ms-vsliveshare.vsliveshare",
        "visualstudioexptteam.vscodeintellicode"
      ]
    }
  },
  "forwardPorts": [4200, 5000, 1433],
  "portsAttributes": {
			"5000": {
				"protocol": "https"
			}
	},
  "postCreateCommand": "dotnet restore && dotnet dev-certs https && dotnet dev-certs https --trust && npm install -g @angular/cli --unsafe-perm=true --location=global && cd frontend && npm install"
}