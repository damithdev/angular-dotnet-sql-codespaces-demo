{
  "name": "Fullstack Dev Env",
  "dockerFile": "Dockerfile",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csharp",
        "angular.ng-template",
        "dbaeumer.vscode-eslint",
        "ms-azuretools.vscode-docker",
        "ms-mssql.mssql",
        "esbenp.prettier-vscode",
        "visualstudioexptteam.vscodeintellicode",
        "ms-vsliveshare.vsliveshare"
      ]
    }
  },
  "forwardPorts": [4200, 5000, 3000],
  "portsAttributes": {
      "5000": {
        "protocol": "https"
      }
	},
  "remoteEnv": {
    "AZ_SQL_SERVER": "${{ secrets.AZ_SQL_SERVER }}",
    "AZ_SQL_USERNAME": "${{ secrets.AZ_SQL_USERNAME }}",
    "AZ_SQL_PASSWORD": "${{ secrets.AZ_SQL_PASSWORD }}",
    "AZ_SQL_DATABASE": "${{ secrets.AZ_SQL_DATABASE }}"
  },
  "postCreateCommand": "chmod +x .devcontainer/post-create.sh && .devcontainer/post-create.sh",
  "postStartCommand": "chmod +x .devcontainer/post-start.sh && .devcontainer/post-start.sh"

}